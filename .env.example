# XenForo Docker Environment Configuration
# Copy this file to .env and update values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MYSQL_DATABASE=xenforo
MYSQL_USER=xenforo_user
MYSQL_PASSWORD=your_mysql_user_password_here

# Backup Configuration
BACKUP_RETENTION_MINUTES=30
BACKUP_INTERVAL=300
NGINX_LOG_MAX_SIZE_MB=500
BACKUP_ARCHIVE_PASSWORD=change_me_securely

# Telegram Delivery (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# TELEGRAM_THREAD_ID=
TELEGRAM_MESSAGE_PREFIX='XenForo backup'

# Timezone
TZ=UTC

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_POST_MAX_SIZE=64M
PHP_UPLOAD_MAX_FILESIZE=64M

# Security
FAIL2BAN_LOG_LEVEL=INFO

# Network Configuration
FRONTEND_SUBNET=172.20.0.0/16
BACKEND_SUBNET=172.21.0.0/16
